#include <stdio.h>
#include <stdlib.h>

// 열거형: 음료 종류 정의
typedef enum {
    COKE = 1,
    CIDER,
    WATER,
    COFFEE
} DrinkType;

// 구조체: 음료 정보 정의
typedef struct {
    DrinkType type;
    char name[20];
    int price;
} Drink;

